<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Topicos Avançados em S.I</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .logout {
            font-size: 19px;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Topicos em SI - IVO LIMA", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", style="color:White" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li>@Html.ActionLink("Início", "Index", "Home", null, new { style = "color:White;" })</li>
                    <li>@Html.ActionLink("Sobre", "About", "Home", null, new { style = "color:White;" })</li>
                    <li>@Html.ActionLink("Minhas Bikes", "Index", "bicicleta", null, new { style = "color:White;" })</li>
                    <li>@Html.ActionLink("Alugadas", "Index", "aluguel", null, new { style = "color:White;" })</li>
                    <li>@Html.ActionLink("Tipo de Aluguel", "Index", "tipobike", null, new { style = "color:White;" })</li>
                    <li>@Html.ActionLink("Revisões", "Index", "revisao", null, new { style = "color:White;" })</li>
                </ul>
                    <ul class="nav navbar-nav">

                        @{
                            if (Session["UserAdmin"] != null)
                            {
                                <li>
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="color: white">
                                    Painel Administrativo <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Usuarios", "Index", "usuario")</li>
                                    <li>@Html.ActionLink("Relatórios", "Index", "Relatorio")</li>
                                </ul>
                            </li>
                                                
                            }
                        }
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                    <li> @Html.ActionLink("Sair do Sistema", "Logout", "home",null, new { style = "color:White;" })</li>
                    </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Developed by IvoLimaJR</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
