@model IEnumerable<dev_skb101.Models.bicicleta>
@{ 
    Layout = null;
    int contador = 0;    if (Session["UserId"] == null)
    {
        Response.Redirect("~/home/login");
    }

    if (Session["UserAdmin"] == null)
    {
        Response.Redirect("~/Home/index");
    }
}
    <style>
        body {
            text-align: justify;
        }
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }
    </style>
<table style="width:100%">
    <tr>
        <th>
            N°
        </th>
        <th>
            Código
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descricao)
        </th>
        <th>
            Situação
        </th>
        <th>
            Condiçoes
        </th>
        <th>
            N° Aluguel
        </th>
    </tr>

@foreach (var item in Model) {
    contador = contador +1;
<tr>
    <td>
        @contador 
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.codigo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.nome)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.descricao)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AlugadaString)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ativaString)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.vezesAlugada)
    </td>
</tr>
}

</table>
